<TreeViewItem x:Class="DSPC.ViewModel.ViewModelContent.PreSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSPC.ViewModel.ViewModelContent"
             mc:Ignorable="d" >
    <TreeViewItem.Header>
        <StackPanel Orientation="Horizontal">
            <CheckBox Content="Преднастройка" MouseEnter="StackPanel_MouseEnter"/>
            <Button Content="Выполнить" Click="Button_Click"/>
        </StackPanel>
    </TreeViewItem.Header>
    <ListBox Name="curListBox">
        <ListBoxItem Selected="ListBoxItem_Selected">
            <StackPanel MouseLeave="StackPanel_MouseLeave">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Выполнить" Click="Button_Click"/>
                    <TextBlock Text="Запустить скрипт преднастройки"/>
                </StackPanel>

            </StackPanel>
        </ListBoxItem>
    </ListBox>
</TreeViewItem>
